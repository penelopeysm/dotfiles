
[commit]
    gpgsign = true
[alias]
    pushall = !git remote | xargs -L1 git push --all
    unadd = reset HEAD --
    last = log -1 HEAD
    st = status
    co = checkout
	recommit = commit --amend --no-edit
	ci = commit
	reci = recommit
    lg = log --graph
[core]
    editor = vim
    autocrlf = input
    pager = diff-so-fancy | less --tabs=4 -RFX
	excludesFile = ~/.gitignore
[pull]
	rebase = false
[diff]
	tool = vimdiff
[push]
    autoSetupRemote = true

; The colours below are tailored for a light terminal. For a dark terminal
; simply comment them out.
[color "decorate"]
	branch = bold 34
    remoteBranch = bold 197
	HEAD = bold 33
    tag = bold 172
[color "diff"]
    commit = 128
[color "status"]
    added = 34
    changed = 33
    untracked = 92
    deleted = 198
[merge "ours"]
	driver = true
[checkout]
	workers = 6
[init]
	defaultBranch = main

; vim: ft=gitconfig
